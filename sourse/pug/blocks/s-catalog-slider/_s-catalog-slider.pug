mixin s-home-slider()
	// start s-home-slider
	+b.s-catalog-slider.section.block-with-lazy#s-catalog-slider&attributes(attributes)
		+e.main-block.bg-wrap
			//- +pic("slider-bg","jpg","bg")(class="picture-bg")
			+e.slider-wrapper
				+e.slider-nav.d-none.d-md-block
					+e.slider-prev.cat-slider-nav
						+icon("slider-prev")
					+e.slider-next.cat-slider-nav
						+icon("slider-next")
				.container
					.swiper-pagination
					+e.slider.slider-js.swiper-container#home-slider
						.swiper-wrapper
							mixin home-slide(i)
								+e.slide.swiper-slide
									a(href="#")
										+e.IMG.image(src=`img/home-slide${i}.png` alt="")
							+home-slide("1")
							+home-slide("3")
							+home-slide("2")
	// end s-home-slider
	
